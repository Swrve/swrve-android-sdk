<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="SwrveDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="cio__control_button" parent="@android:style/Widget.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="cio__button_tray">

    </style>

    <style name="cio__mvl_spinner" parent="Widget.AppCompat.Spinner">

    </style>

    <style name="cio__conversation_content_box">
        <!-- If we ever make the content section editable, this is where we would do it. -->
    </style>


    <style name="cio__content_textview" parent="@android:style/Widget.TextView">
        <item name="android:padding">10dp</item>
    </style>

    <style name="cio__content_bold_textview" parent="@style/cio__content_textview">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">10pt</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cio__list_help_text" parent="cio__content_textview">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FF666666</item>
    </style>

    <style name="cio__edit_box" parent="@android:style/Widget.EditText">
         <!--Any changes to the editText Style should go here -->
        <item name="android:gravity">top</item>
        <item name="android:padding">6dp</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="cio__mv_item" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="cio__np_displayCell">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="cio__mv_description_item" parent="@style/cio__content_textview">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">10pt</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="cio__description_item" parent="@style/cio__content_textview">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">10pt</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="cio__dialog_textview" parent="@android:style/Widget.TextView">
        <item name="android:minHeight">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="cio__dialog_button" parent="@android:style/Widget.Button">
        <item name="android:minWidth">160dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>